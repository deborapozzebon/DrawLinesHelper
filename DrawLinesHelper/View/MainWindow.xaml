<Window x:Class="DrawLinesHelper.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawLinesHelper.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="1500"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <Button Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5 5" Content="Load JSON" Click="btnOpenFile_Click"/>
        <Button Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110 5" Content="Clear" Click="btnClearJson_Click"/>
        <Button Width="100" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5 5" Content="Save Image" Click="btnSaveImage_Click"/>

        <Border BorderThickness="0.5" BorderBrush="Gray" Height="800" Width="1450" VerticalAlignment="Center" HorizontalAlignment="Center">
            
        <Canvas Height="750" Width="1450" Name="myCanvas" VerticalAlignment="Center" HorizontalAlignment="Center">
        </Canvas>
        </Border>

    </Grid>
</Window>
